{
    "openapi": "3.0.2",
    "info": {
        "version": "1.0.1",
        "title": "KMA Schedule API",
        "contact": {
            "name": "Trần Đức Cường",
            "url": "https://www.facebook.com/ShiinDz",
            "email": "clonebmn2itt@gmail.com"
        },
        "termsOfService": "http://swagger.io/terms/",
        "x-logo": {
            "url": "https://rebilly-core.redoc.ly/rb_apiLogo.svg",
            "backgroundColor": "#0033A0"
        },
        "description": "# Giới thiệu\nApi dùng để tra cứu thời khóa biểu kma."
    },
    "servers": [
        {
            "url": "https://kma-center.herokuapp.com",
            "description": "Live Server"
        },
        {
            "url": "http://localhost:8000",
            "description": "Sandbox Server"
        }
    ],
    "tags": [
        {
            "name": "User",
            "description": "Thông tin tài khoản sinh viên."
        },
        {
            "name": "Schedule",
            "description": "Thông tin về thời khóa biểu."
        }
    ],
    "paths": {
        "/users": {
            "get": {
                "tags": [
                    "User"
                ],
                "summary": "Liêt kê các tài khoản trên hệ thống.",
                "operationId": "getUser",
                "responses": {
                    "200": {
                        "description": "Lấy thành công",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/User"
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Có lỗi xảy ra",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/login": {
            "post": {
                "tags": [
                    "User"
                ],
                "summary": "Đăng nhập vào hệ thống",
                "operationId": "loginUser",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Login"
                            }
                        }
                    },
                    "description": "Thông tin đăng nhập của sinh viên",
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "Đăng nhập thành công",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SuccessResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Tài khoản hoặc mật khẩu sai",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/schedules/": {
            "get": {
                "tags": [
                    "Schedule"
                ],
                "summary": "Lấy thời khóa biểu theo tên",
                "operationId": "getSchedule",
                "responses": {
                    "200": {
                        "description": "Danh sách thời khóa biểu",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/DataResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Lỗi xảy ra",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/schedules/semesters/": {
            "get": {
                "tags": [
                    "Schedule"
                ],
                "summary": "Lấy code và tên các học kỳ",
                "operationId": "getSemester",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/studentCode"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Danh sách học kỳ",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Semesters"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Lỗi xảy ra",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/schedules/save": {
            "post": {
                "tags": [
                    "Schedule"
                ],
                "summary": "Lưu thời khóa biểu của học kỳ",
                "operationId": "saveSchedule",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/SaveSchedule"
                            }
                        }
                    },
                    "description": "Thông tin về sinh viên và học kỳ",
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "Lưu thời khóa biểu thành công",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/SuccessResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Lưu thời khóa biểu thất bại",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/schedules/search/": {
            "post": {
                "tags": [
                    "Schedule"
                ],
                "summary": "Tra cứu thời khóa biểu theo ngày",
                "operationId": "searchSchedule",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/SearchSchedule"
                            }
                        }
                    },
                    "description": "Thông tin tra cứu",
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "Tra cứu thời khóa biểu thành công",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Schedules"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Tra cứu thời khóa biểu thất bại",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "parameters": {
            "studentCode": {
                "in": "query",
                "name": "studentCode",
                "required": true,
                "schema": {
                    "type": "string",
                    "example": "CT030208"
                },
                "description": "Mã sinh viên cần tra cứu."
            }
        },
        "schemas": {
            "Login": {
                "type": "object",
                "properties": {
                    "studentCode": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                },
                "example": {
                    "studentCode": "CT030201",
                    "password": 12345
                }
            },
            "User": {
                "type": "object",
                "properties": {
                    "studentCode": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "className": {
                        "type": "string"
                    }
                },
                "example": {
                    "studentCode": "CT030201",
                    "name": "Nguyễn Văn A",
                    "className": "CT3B"
                }
            },
            "Schedules": {
                "type": "array",
                "items": {
                    "properties": {
                        "subjectCode": {
                            "type": "string",
                            "description": "Mã môn học"
                        },
                        "subjectName": {
                            "type": "string",
                            "description": "Tên môn học"
                        },
                        "className": {
                            "type": "string"
                        },
                        "teacher": {
                            "type": "string"
                        },
                        "lesson": {
                            "type": "number",
                            "description": "Tiết học",
                            "minimum": 1,
                            "maximum": 15
                        },
                        "room": {
                            "type": "string"
                        },
                        "day": {
                            "type": "string",
                            "format": "date-time"
                        }
                    }
                },
                "example": [
                    {
                        "subjectCode": "ATCTKM1",
                        "subjectName": "Cấu trúc dữ liệu và giải thuật",
                        "className": "Cấu trúc dữ liệu và giải thuật-1-20 (A15C302)",
                        "teacher": "Nguyễn Văn Phác",
                        "lesson": 10,
                        "room": "103_AT1 TA1",
                        "day": "2020-08-30T17:00:00.000Z"
                    }
                ]
            },
            "ErrorResponse": {
                "type": "object",
                "properties": {
                    "success": {
                        "type": "boolean"
                    },
                    "error": {
                        "type": "object",
                        "properties": {
                            "message": {
                                "type": "string"
                            }
                        }
                    }
                },
                "example": {
                    "success": false,
                    "error": {
                        "message": "Co loi xay ra"
                    }
                }
            },
            "SuccessResponse": {
                "type": "object",
                "properties": {
                    "success": {
                        "type": "boolean"
                    },
                    "message": {
                        "type": "string"
                    }
                },
                "example": {
                    "success": true,
                    "message": "Thành công"
                }
            },
            "DataResponse": {
                "type": "object",
                "properties": {
                    "data": {
                        "type": "array",
                        "items": {
                            "type": "object"
                        }
                    }
                },
                "example": {
                    "data": []
                }
            },
            "Semesters": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "drpSemester": {
                            "type": "string"
                        }
                    }
                },
                "example": [
                    {
                        "name": 220202021,
                        "drpSemester": "4aeee21881294e4597e8e77c4c4bed04"
                    }
                ]
            },
            "SaveSchedule": {
                "type": "object",
                "properties": {
                    "studentCode": {
                        "type": "string"
                    },
                    "drpSemester": {
                        "type": "string"
                    }
                },
                "example": {
                    "studentCode": "CT030201",
                    "drpSemester": "4aeee21881294e4597e8e77c4c4bed04"
                }
            },
            "SearchSchedule": {
                "type": "object",
                "properties": {
                    "studentCode": {
                        "type": "string"
                    },
                    "days": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "example": {
                    "studentCode": "CT030201",
                    "days": [
                        "01/01/2020",
                        "02/01/2020"
                    ]
                }
            }
        }
    }
}